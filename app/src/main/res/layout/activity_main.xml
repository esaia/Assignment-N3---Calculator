<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C46FE1D7"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="showResult"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:stretchColumns="4"
        app:layout_constraintBottom_toTopOf="@+id/button">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="7"
                android:textColor="#ffff"
                android:onClick="numberClick"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="8"
                android:textColor="#ffff"
                android:onClick="numberClick"

                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="9"
                android:textColor="#ffff"
                android:onClick="numberClick"

                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#4399AF"
                android:text="*"
                android:onClick="operatorClick"
                android:textColor="#E0EEF6"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="4"
                android:textColor="#ffff"
                android:onClick="numberClick"

                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="5"
                android:textColor="#ffff"
                android:onClick="numberClick"

                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="6"
                android:textColor="#ffff"
                android:onClick="numberClick"

                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#D33333"
                android:text="-"
                android:onClick="operatorClick"
                android:textColor="#E0EEF6"
                android:textSize="20sp" />

            />


        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="1"
                android:textColor="#ffff"
                android:onClick="numberClick"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="2"
                android:textColor="#ffff"
                android:onClick="numberClick"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="3"
                android:textColor="#ffff"
                android:onClick="numberClick"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#4399AF"
                android:text="+"
                android:onClick="operatorClick"
                android:textColor="#E0EEF6"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button14"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#0F4FAF"
                android:text="C"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:onClick="clear"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#AEEC4B"
                android:text="0"
                android:textColor="#ffff"
                android:onClick="numberClick"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#0F4FAF"
                android:text="."
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#D33333"
                android:text="/"
                android:onClick="operatorClick"
                android:textColor="#E0EEF6"
                android:textSize="20sp" />

            />


        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1DB193"
            android:text="%"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1DB193"
            android:text="âˆš"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1DB193"
            android:text="+/-"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25sp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>